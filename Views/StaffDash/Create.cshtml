@model Asr.Models.Slot

@{
    ViewData["Title"] = "Create a Slot";
}

<h3>Create a new slot</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoomID" class="control-label"></label>
                <select asp-for="RoomID" class ="form-control" asp-items="ViewBag.RoomID"></select>
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label"></label>
                <input asp-for="StartTime" class="form-control"  />
                <span asp-validation-for="StartTime" class="text-danger"></span>
                <a class="text-danger">@ViewBag.DateMessage</a>
            </div>
            <div class="form-group">
                <label asp-for="StaffID" class="control-label"></label>
                <input asp-for="StaffID" class="form-control" value="@User.Identity.Name.Substring(0, 6)" readonly />
            </div>
            <div class="form-group">
                <a class="text-danger">@ViewBag.StaffMessage</a>
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
